        {
            "name": "C/C++: gcc.exe build and debug planarity project (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\c\\planarity.exe",
            "args": [
                // Command: `planarity -t [-q] -ta I O`
                // "-t",
